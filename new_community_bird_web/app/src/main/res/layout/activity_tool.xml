<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolActivity">

    <LinearLayout
        android:id="@+id/ll_main_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tool_ll_1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tool_btn_1"
                android:layout_width="183dp"
                android:layout_height="90dp"
                android:layout_marginStart="9dp"
                android:text="备忘录"
                android:textSize="25dp"
                android:textColor="	#EE9A00"
                android:drawableRight="@drawable/photo_thirty_four"
                android:background="@drawable/tool_btn_one"
                >
            </Button>
            <Button
                android:id="@+id/tool_btn_2"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_width="183dp"
                android:layout_height="90dp"
                android:text="联系人"
                android:textSize="25dp"
                android:textColor="#FF7256"
                android:drawableRight="@drawable/photo_thirty_six"
                android:background="@drawable/tool_btn_two"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tool_ll_2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/tool_btn_3"
                android:layout_width="183dp"
                android:layout_height="90dp"
                android:layout_marginStart="9dp"
                android:text="提醒器"
                android:textSize="25dp"
                android:textColor="#A020F0"
                android:drawableRight="@drawable/photo_thirty_seven"
                android:background="@drawable/tool_btn_three"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tool_ll_3"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_below="@id/tool_ll_2"
            android:layout_marginTop="470dp"
            android:background="@drawable/ll_1">

            <Button
                android:id="@+id/tool_menu_btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="资讯"
                android:textSize="15sp"
                android:textColor="#FF6347"
                android:drawableTop="@drawable/photo_three"
                android:background="@android:color/transparent">
            </Button>

            <Button
                android:id="@+id/tool_menu_btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="工具"
                android:textSize="15sp"
                android:textColor="#E066FF"
                android:drawableTop="@drawable/photo_five"
                android:background="@android:color/transparent">
            </Button>

            <Button
                android:id="@+id/tool_menu_btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="其他"
                android:textSize="15sp"
                android:textColor="#f4ea2a"
                android:drawableTop="@drawable/photo_seven"
                android:background="@android:color/transparent">
            </Button>

            <Button
                android:id="@+id/tool_menu_btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的"
                android:textSize="15sp"
                android:textColor="#FFB5C5"
                android:drawableTop="@drawable/photo_nine"
                android:background="@android:color/transparent">
            </Button>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>